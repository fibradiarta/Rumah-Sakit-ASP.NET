
@{
    Layout = "~/Views/Shared/_LayoutDasboard.cshtml";
    ViewBag.Title = "Index";
}

@model IEnumerable<WebRumahSakit.Models.RUANGAN>

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Ruangan</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-success btn-sm" id="insert" href="@Url.Action("Create","Ruangan")"><i class="fa fa-plus-square"> Create</i></a>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Room Name</th>
                                    <th>Room Type</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RUANGAN_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NAMA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.JENIS_RUANGAN.NAMA)
                                    </td>
                                    <td>
                                        @if (item.STATUS == true)
                                        {
                                            @Html.DisplayName("Available")
                                        }
                                        else
                                        {
                                            @Html.DisplayName("Unavailable")
                                        }
                                    </td>

                                    <td class="text-center">
                                        <a class="btn btn-warning btn-sm" id="insert" href="@Url.Action("Edit","Ruangan", new { id = item.RUANGAN_ID })"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-danger btn-sm" id="insert" href="@Url.Action("Delete","Ruangan", new { id = item.RUANGAN_ID })"><i class="fa fa-trash"></i></a>
                                        <a class="btn btn-primary btn-sm" id="insert" href="@Url.Action("Details","Ruangan", new { id = item.RUANGAN_ID })"><i class="fa fa-info-circle"></i></a>
                                    </td>
                                </tr>
                                }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>
<!--modal insert-->