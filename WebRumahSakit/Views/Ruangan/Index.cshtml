                                    <option value="3">Kelas II</option>
                                    <option value="3">Kelas III</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="nf-password" class=" form-control-label">Status</label>
                            <!-- Default unchecked -->
                            <div class="custom-control custom-radio">
