
@{
    Layout = "~/Views/Shared/_LayoutDasboard.cshtml";
    ViewBag.Title = "Index";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Ruangan</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <button class="btn btn-success btn-sm" id="insert" data-toggle="modal" data-target="#insertRuangan"><i class="fa fa-plus-square"></i></button>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Room Name</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Anggrek</td>
                                    <td>Kelas I</td>
                                    <td>Available</td>
                                    <td class="text-center">
                                        <button class="btn btn-warning btn-sm" id="edit"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger btn-sm" id="delete"><i class="fa fa-trash"></i></button>
                                        <button class="btn btn-primary btn-sm" id="detail"><i class="fa fa-info-circle"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Mawar</td>
                                    <td>Kelas II</td>
                                    <td>Available</td>
                                    <td class="text-center">
                                        <button class="btn btn-warning btn-sm" id="edit"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger btn-sm" id="delete"><i class="fa fa-trash"></i></button>
                                        <button class="btn btn-primary btn-sm" id="detail"><i class="fa fa-info-circle"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Melati</td>
                                    <td>Kelas III</td>
                                    <td>Available</td>
                                    <td class="text-center">
                                        <button class="btn btn-warning btn-sm" id="edit"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger btn-sm" id="delete"><i class="fa fa-trash"></i></button>
                                        <button class="btn btn-primary btn-sm" id="detail"><i class="fa fa-info-circle"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td>Soka</td>
                                    <td>Kelas I</td>
                                    <td>Available</td>
                                    <td class="text-center">
                                        <button class="btn btn-warning btn-sm" id="edit"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger btn-sm" id="delete"><i class="fa fa-trash"></i></button>
                                        <button class="btn btn-primary btn-sm" id="detail"><i class="fa fa-info-circle"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>5</td>
                                    <td>Sedap Malam</td>
                                    <td>Kelas III</td>
                                    <td>Available</td>
                                    <td class="text-center">
                                        <button class="btn btn-warning btn-sm" id="edit"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger btn-sm" id="delete"><i class="fa fa-trash"></i></button>
                                        <button class="btn btn-primary btn-sm" id="detail"><i class="fa fa-info-circle"></i></button>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
    <!--modal insert-->
    <div class="modal fade" id="insertRuangan" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mediumModalLabel">Medium Modal</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="" method="post" class="">
                        <div class="form-group">
                            <label for="nf-email" class=" form-control-label">Room Name</label>
                            <input type="text" id="roomName" name="roomName" placeholder="Enter Room Name.." class="form-control">
                        </div>
                        <div class="form-group">
                            <div>
                                <label for="nf-password" class=" form-control-label">Type</label>
                            </div>
                            <div>
                                <select class="standardSelect" tabindex="1">
                                    <option value="">-Select Type-</option>
                                    <option value="2">Kelas I</option>
                                    <option value="3">Kelas II</option>
                                    <option value="3">Kelas III</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="nf-password" class=" form-control-label">Status</label>
                            <!-- Default unchecked -->
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" id="rbAvailable" name="rbStatus" checked>
                                <label class="custom-control-label" for="rbLaki">Available</label>
                            </div>

                            <!-- Default checked -->
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" id="rbUnavailable" name="rbStatus" >
                                <label class="custom-control-label" for="rbPerempuan">Unavailable</label>
                            </div>
                        </div>
                        
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>
    
