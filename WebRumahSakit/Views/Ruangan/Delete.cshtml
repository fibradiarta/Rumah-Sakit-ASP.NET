@model WebRumahSakit.Models.RUANGAN

@{
    Layout = "~/Views/Shared/_LayoutDasboard.cshtml";
    ViewBag.Title = "Delete";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Ruangan/Delete</li>
                </ol>
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Delete Ruangan</strong>
                        </div>
                        <div class="card-body">
                            <form>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Room Name</label>
                                        @Html.EditorFor(model => model.NAMA, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Room Type</label>
                                        @Html.EditorFor(model => model.JENIS_RUANGAN.NAMA, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Status</label>
                                        @if (Model.STATUS == true)
                                        {
                                            <input type="text" placeholder="Available" class="form-control" disabled=""/>
                                        }
                                        else
                                        {
                                            <input type="text" placeholder="Unavailable" class="form-control" disabled="" />
                                        }
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="col-md-12">
                                <button value="Delete" class="btn btn-primary"><i class="fa fa-dot-circle-o"> Delete</i></button>
                                <button value="Cancel" class="btn btn-danger"><i class="fa fa-ban"> Cancel</i></button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

