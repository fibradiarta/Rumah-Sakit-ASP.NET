@model WebRumahSakit.Models.RUANGAN

@{
    Layout = "~/Views/Shared/_LayoutDasboard.cshtml";
    ViewBag.Title = "Create";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Ruangan/Create</li>
                </ol>
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Insert Ruangan</strong>
                        </div>
                        <div class="card-body">
                            <form>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Room Name</label>
                                        @Html.EditorFor(model => model.NAMA, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NAMA, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Room Type</label>
                                        @Html.DropDownListFor(model => model.JENIS_RUANGAN_ID, (IEnumerable<SelectListItem>)ViewBag.jRuangan, "-Select Type-", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.JENIS_RUANGAN_ID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Status</label>
                                        <div class="radio">
                                            @Html.RadioButtonFor(model => model.STATUS, true, true) Available
                                        </div>
                                        <div class="radio">
                                            @Html.RadioButtonFor(model => model.STATUS, false, false) Unavailable
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="col-md-12">
                                <button value="Create" class="btn btn-primary"><i class="fa fa-dot-circle-o"> Create</i></button>
                                <button value="Cancel" class="btn btn-danger"><i class="fa fa-ban"> Cancel</i></button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




