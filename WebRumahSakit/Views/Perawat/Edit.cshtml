@model WebRumahSakit.Models.PERAWAT

@{
    Layout = "~/Views/Shared/_LayoutDasboard.cshtml";
    ViewBag.Title = "Edit";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Perawat/Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PERAWAT_ID)
    <div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Edit Perawat</strong>
                    </div>
                    <div class="card-body">
                        <form>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label">Full Name</label>
                                    @Html.EditorFor(model => model.NAMA, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NAMA, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label">Address</label>
                                    @Html.TextAreaFor(model => model.ALAMAT, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ALAMAT, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label">Phone</label>
                                    @Html.EditorFor(model => model.NO_TELP, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NO_TELP, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label">Gender</label>
                                    <div class="radio">
                                        @Html.RadioButtonFor(model => model.JENIS_KELAMIN, true, true) Laki-laki
                                    </div>
                                    <div class="radio">
                                        @Html.RadioButtonFor(model => model.JENIS_KELAMIN, false, false) Perempuan
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="col-md-12">
                            <button value="Edit" class="btn btn-primary"><i class="fa fa-dot-circle-o"> Edit</i></button>
                            <button value="Cancel" class="btn btn-danger"><i class="fa fa-ban"> Cancel</i></button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}