@model IEnumerable<WebRumahSakit.Models.PEGAWAI>
@{
    Layout = "~/Views/Shared/_LayoutDasboard.cshtml";
    ViewBag.Title = "Index";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Pegawai</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-success btn-sm" id="insert" href="@Url.Action("Create","Pegawai")"><i class="fa fa-plus-square"></i></a>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Full Name</th>
                                    <th>Role Name</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Gender</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PEGAWAI_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NAMA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ROLE.NAMA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ALAMAT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NO_TELP)
                                    </td>
                                    <td>
                                        @if (item.JENIS_KELAMIN == true)
                                        {
                                            @Html.DisplayName("Laki-laki")
                                        }
                                        else
                                        {
                                            @Html.DisplayName("Perempuan")
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EMAIL)
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-warning btn-sm" id="edit" href="@Url.Action("Edit","Pegawai", new { id = item.PEGAWAI_ID })"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-danger btn-sm" id="delete" href="@Url.Action("Delete","Pegawai", new { id = item.PEGAWAI_ID })"><i class="fa fa-trash"></i></a>
                                        <a class="btn btn-primary btn-sm" id="detail" href="@Url.Action("Details","Pegawai", new { id = item.PEGAWAI_ID })"><i class="fa fa-info-circle"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
