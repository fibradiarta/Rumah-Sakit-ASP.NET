@model WebRumahSakit.Models.PEGAWAI

@{
    Layout = "~/Views/Shared/_LayoutDasboard.cshtml";
    ViewBag.Title = "Create";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Pegawai/Create</li>
                </ol>
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Insert Pegawai</strong>
                        </div>
                        <div class="card-body">
                            <form>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Full Name</label>
                                        @Html.EditorFor(model => model.NAMA, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NAMA, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Poly</label>
                                        @if (ViewBag.Role != null)
                                        {
                                            @Html.DropDownListFor(model => model.ROLE_ID, (IEnumerable<SelectListItem>)ViewBag.Role, "-Select Role-", new { @class = "form-control" })
                                        }
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Email</label>
                                        @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Password</label>
                                        @Html.PasswordFor(model => model.PASSWORD, new { @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Address</label>
                                        @Html.TextAreaFor(model => model.ALAMAT, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ALAMAT, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Phone</label>
                                        @Html.EditorFor(model => model.NO_TELP, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NO_TELP, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Gender</label>
                                        <div class="radio">
                                            @Html.RadioButtonFor(model => model.JENIS_KELAMIN, true, true) Laki-laki
                                        </div>
                                        <div class="radio">
                                            @Html.RadioButtonFor(model => model.JENIS_KELAMIN, false, false) Perempuan
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Status</label>
                                        <div class="radio">
                                            @Html.RadioButtonFor(model => model.STATUS, true, true) Work
                                        </div>
                                        <div class="radio">
                                            @Html.RadioButtonFor(model => model.STATUS, false, false) Resign
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="col-md-12">
                                <button value="Create" class="btn btn-primary"><i class="fa fa-dot-circle-o"> Create</i></button>
                                <button value="Cancel" class="btn btn-danger"><i class="fa fa-ban"> Cancel</i></button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}







